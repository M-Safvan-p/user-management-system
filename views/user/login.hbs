<body>
    <div class="container">
        <a href="/admin/login" class="admin-btn">ðŸ‘¤</a>
        
        <h2>Welcome Back</h2>
        <form action="/user/login" method="POST" onsubmit="return formValidate()">
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="text" id="email" name="email" >
            </div>
            <div class="form-group">
                <label for="password">Password</label>
                <input type="password" id="password" name="password" >
            </div>
            <button type="submit" class="submit-btn">Sign In</button>
        </form>
        
        <div class="links">
            <a href="#" onclick="alert('Password reset functionality to be implemented')">Forgot Password?</a>
            <div class="divider">or</div>
            <a href="/user/register">Create New Account</a>
        </div>
    </div>
</body>
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
<script>
    function formValidate() {
        let email = document.getElementById("email").value.trim();
        let password = document.getElementById("password").value;

        const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;

        if (!email || !password) {
            swal("Please fill in all fields.");
            return false;
        }
        if (!emailRegex.test(email)) {      
            swal("Please enter a valid email address.");
            return false;
        }
        if (password.length < 4) {
            swal("Password must be at least 4 characters.");
            return false;
        }
        return true;
    }
</script>
<script>
    const message = "{{message}}";
    if (message) {
        swal(message);
    }
</script>